{
  "name": "hydro",
  "version": "0.6.1",
  "preferGlobal": true,
  "description": "Teeny-weeny test runner for Node.js",
  "main": "./lib/hydro.js",
  "homepage": "https://github.com/hydrojs/hydro",
  "scripts": {
    "test": "bin/hydro",
    "coverage": "istanbul cover bin/_hydro -- --formatter hydro-silent",
    "coveralls": "istanbul cover bin/_hydro --report lcovonly -- --formatter hydro-silent && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hydrojs/hydro"
  },
  "bin": {
    "hydro": "./bin/hydro",
    "_hydro": "./bin/_hydro"
  },
  "devDependencies": {
    "chai": "~1.8.1",
    "nixt": "0.0.4",
    "hydro-formatter": "~1.0.0",
    "hydro-silent": "~1.0.1",
    "coveralls": "~2.3.0",
    "istanbul": "~0.1.46"
  },
  "author": "Veselin Todorov <hi@vesln.com>",
  "license": "MIT",
  "dependencies": {
    "hydro-simple": "~1.0.0",
    "super": "~0.2.1",
    "evts": "0.0.1",
    "v8-argv": "~0.1.0",
    "glob": "~3.2.7",
    "optimist": "~0.6.0"
  }
}
